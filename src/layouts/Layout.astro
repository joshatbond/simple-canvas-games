---
type Props = { description?: string; title?: string }

const { description, title } = Astro.props
---

<!doctype html>
<html lang='en' class='bg-neutral-900 text-neutral-50'>
  <head>
    <meta charset='UTF-8' />

    <meta name='viewport' content='width=device-width' />

    <meta name='description' content={description ?? ''} />

    <meta name='generator' content={Astro.generator} />
    <title>{title ?? 'Astro Starter'}</title>
  </head>

  <body>
    <div class='min-h-screen'>
      <slot name='header'>
        <header class='p-4'>
          <a href='/'>
            <h1 class='text-2xl font-bold'>Simple Canvas Games</h1>
          </a>
        </header>
      </slot>

      <slot />
    </div>

    <footer class='p-4'>
      <p class='text-center'>
        Joshua Richardson | Â© {new Date().getFullYear()}
      </p>
    </footer>
  </body>
</html>
